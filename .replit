run = "streamlit run app.py"
language = "python3"
hidden = [".venv", "__pycache__", "*.pyc", ".git", "data_raw e.json"]
entrypoint = "app.py"

[env]
PYTHONUNBUFFERED = "1"

[nix]
enabled = true

[packager]
language = "python3"
ignoredPackages = ["unit_tests"]

[packager.features]
enabledForHosting = false
packageSearch = true
guessImports = true

[languages]

[languages.python3]
pattern = "**/*.py"
syntax = "python"

[languages.python3.languageServer]
start = "pylsp" 